{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/",
        "rootDir": "./",
        "baseUrl": "./",
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*", "src/types/*", "src/tests/*"]
        }
    },
    "include": ["src/**/*"]
}
